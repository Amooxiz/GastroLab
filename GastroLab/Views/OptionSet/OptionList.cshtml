@model IEnumerable<GastroLab.Application.ViewModels.OptionVM>

@{
    ViewData["Title"] = "OptionList";
}

<h1>Option list</h1>

<p>
    <button onclick="showCreateForm()" class="btn btn-primary">Create New</button>
</p>
<div id="createForm" style="display:none;">
    <partial name="_AddOptionPartial" model="new GastroLab.Application.ViewModels.OptionVM()" />
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="EditOption" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DeleteOption" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function showCreateForm() {
            var formDiv = document.getElementById('createForm');
            if (formDiv.style.display === 'none') {
                formDiv.style.display = 'block';
            } else {
                formDiv.style.display = 'none';
            }
        }
    </script>
}
