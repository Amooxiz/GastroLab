@model GastroLab.Application.ViewModels.GlobalSettingsVM

@{
    ViewData["Title"] = "Global Settings";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="RestaurantName" class="control-label"></label>
        <input asp-for="RestaurantName" class="form-control" />
        <span asp-validation-for="RestaurantName" class="text-danger"></span>
    </div>

    <h3>Address</h3>

    <div class="form-group">
        <label asp-for="AddressVM.Street" class="control-label"></label>
        <input asp-for="AddressVM.Street" class="form-control" />
        <span asp-validation-for="AddressVM.Street" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddressVM.HouseNumber" class="control-label"></label>
        <input asp-for="AddressVM.HouseNumber" class="form-control" type="number" />
        <span asp-validation-for="AddressVM.HouseNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddressVM.FlatNumber" class="control-label"></label>
        <input asp-for="AddressVM.FlatNumber" class="form-control" type="number" />
        <span asp-validation-for="AddressVM.FlatNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddressVM.City" class="control-label"></label>
        <input asp-for="AddressVM.City" class="form-control" />
        <span asp-validation-for="AddressVM.City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddressVM.PostCode" class="control-label"></label>
        <input asp-for="AddressVM.PostCode" class="form-control" />
        <span asp-validation-for="AddressVM.PostCode" class="text-danger"></span>
    </div>

    <h3>Default Waiting Times (in minutes)</h3>

    <div class="form-group">
        <label asp-for="DefaultDineInWaitingTimeInMinutes" class="control-label"></label>
        <input asp-for="DefaultDineInWaitingTimeInMinutes" class="form-control" type="number" min="1" max="1440" />
        <span asp-validation-for="DefaultDineInWaitingTimeInMinutes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DefaultDeliveryWaitingTimeInMinutes" class="control-label"></label>
        <input asp-for="DefaultDeliveryWaitingTimeInMinutes" class="form-control" type="number" min="1" max="1440" />
        <span asp-validation-for="DefaultDeliveryWaitingTimeInMinutes" class="text-danger"></span>
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
